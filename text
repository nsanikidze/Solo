</label>  <label class="checkbox-container ">ბაკურიანი
    <input type="checkbox" name="city"  value="ბაკურიანი">
    <span class="checkmark"></span>
</label>  <label class="checkbox-container ">გუდაური
    <input type="checkbox" name="city"  value="გუდაური">
    <span class="checkmark"></span>
</label>  <label class="checkbox-container ">აბასთუმანი
    <input type="checkbox" name="city"  value="აბასთუმანი">
    <span class="checkmark"></span>
</label>  <label class="checkbox-container ">მანგლისი
    <input type="checkbox" name="city"  value="მანგლისი">
    <span class="checkmark"></span>
</label>


let getCityParams = () => {
    let cities = document.querySelectorAll('input[type=checkbox][name=city]');
    for (let city of cities) {
        city.addEventListener('change', () => {
            cityParam = "&cityParam=";
            let checkedCities = Array.from(cities) // Convert checkboxes to an array to use filter and map.
                .filter(i => i.checked) // Use Array.filter to remove unchecked checkboxes.
                .map(i => i.value) // Use Array.map to extract only the checkbox values from the array of objects.
            if (checkedCities.length == 0) {
                cityParam = "";
            } else {
                for (let checkedCity of checkedCities) {
                    if (checkedCity === "ყველა") {
                        cityParam = "";
                        break;
                    } else {
                        cityParam += '%2C' + checkedCity;
                    }
                }
            }
            getService();
            return cityParam;
        })
    }
    return cityParam;
}


let getDevStatusParams = () => {
    let devStatuses = document.querySelectorAll('input[type=checkbox][name=devStatus]');
    for (let devStatus of devStatuses) {
        devStatus.addEventListener('change', () => {
            devStatusParam = "&typeParam=";
            let checkedDevStatuses = Array.from(devStatuses) // Convert checkboxes to an array to use filter and map.
                .filter(i => i.checked) // Use Array.filter to remove unchecked checkboxes.
                .map(i => i.value) // Use Array.map to extract only the checkbox values from the array of objects.
            if (devStatusParam.length == 0) {
                devStatusParam = "";
            } else {
                for (let checkedDevStatus of checkedDevStatuses) {
                    if (checkedDevStatus === "ყველა") {
                        devStatusParam = "";
                        break;
                    } else {
                        devStatusParam += '%2C' + checkedDevStatus.replace(" ", "+");
                    }
                }
            }
            getService();
            return devStatusParam;
        })
    }
    return devStatusParam;
}
